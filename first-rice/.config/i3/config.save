#--------#
# BASICS #
#--------#

# mod
set $mod Mod4

# font
font pango:Hack 14

#-----------------------------#
# WINDOW / WORKSPACE COMMANDS #
#-----------------------------#

# drag floating key
floating_modifier $mod

# kill focused window
bindsym $mod+q kill

# change focus
bindsym $mod+ focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move windows
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# toggle tiling / floating
bindsym $mod+b floating toggle

# workspace variables
set $ws1 "1:" 
set $ws2 "2:"
set $ws3 "3:"
set $ws4 "4:"
set $ws5 "5:"

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5

#----------------#
# BASIC BINDINGS #
#----------------#

# rofi
bindsym $mod+d exec --no-startup-id rofi -show run

# urxvt
bindsym $mod+Return exec urxvt
bindsym $mod+Tab exec --no-startup-id urxvt -name floating

# restart i3 in place
bindsym $mod+Shift+r restart

# print screen
bindsym Print exec --no-startup-id scrot

# lock i3
bindsym $mod+e exec ~/Scripts/lock.sh

# exit i3
bindsym $mod+Shift+e exec i3-msg exit

#------#
# GAPS #
#------#

gaps inner 10
gaps outer 0
bindsym $mod+o gaps outer current set 0; gaps inner current set 10
bindsym $mod+i gaps outer current set 20; gaps inner current set 20

#------------#
# APPEARANCE #
#------------#

# window border
for_window [class="^.*"] border pixel 0
#for_window [class=".*"] title_format "<span font='Hack 10'> > %title</span>"

# class				border		background	text		indicator	child border
client.focused          	#		#		#	 	#		#
client.unfocused        	#		#		#		#		#
client.focused_inactive 	#		#		#		#		#
client.urgent           	#		#		#		#		#
client.background 		#

#----------------------#
# STARTUP APPLICATIONS #
#----------------------#

exec --no-startup-id feh --bg-scale ~/Pictures/wallpapers/wallpaper.jpg
#exec --no-startup-id dropbox
exec --no-startup-id compton -cb --config ~/.config/compton/compton.conf
#exec --no-startup-id sudo powertop --auto-tune
exec --no-startup-id nm-applet
#exec --no-startup-id udiskie
exec_always --no-startup-id xrdb ~/.Xresources

#---------------#
# SPECIAL CASES #
#---------------#

# default workspaces
assign [class="qutebrowser"] $ws2
assign [class="Firefox"] $ws2

# thunar
for_window [class="Thunar"] floating enable
for_window [class="Thunar"] resize set 1000 750
for_window [class="Thunar"] move absolute position center

# feh
for_window [class="feh"] floating enable
for_window [class="feh"] move absolute position center

# dropdown terminal
for_window [instance="floating"] floating enable
for_window [instance="floating"] resize set 800 600
for_window [instance="floating"] move absolute position center

# libreoffice
for_window [class="Soffice"] resize set 1000 750
for_window [class="Soffice"] move absolute position center

#------------#
# MEDIA KEYS #
#------------#

# audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle

# screen brightness controls
bindsym XF86MonBrightnessUp exec light -A 10
bindsym XF86MonBrightnessDown exec light -U 10

floating_maximum_size 700 x 500
floating_minimum_size 700 x 500

#-----#
# BAR #
#-----#

exec_always --no-startup-id ~/Scripts/bar.sh

